<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:background="@color/color_ff7000"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/large_x"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/find" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/news_status_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        app:tabIndicatorColor="@color/color_ff7000"
        app:tabTextColor="@color/color_bababa"
        app:tabSelectedTextColor="@color/color_ff7000"
        app:tabIndicatorHeight="@dimen/dimen_1dp">
    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>