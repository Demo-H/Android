<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_item_fresco_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        fresco:roundedCornerRadius="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:layout_marginLeft="@dimen/dimen_7dp"
        android:layout_marginRight="@dimen/dimen_7dp"
        android:background="@drawable/bg_banner_image"/>
</LinearLayout>