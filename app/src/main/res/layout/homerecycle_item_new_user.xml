<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dhunter.common.view.ExpandImageView
            android:id="@+id/new_user_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.dhunter.common.view.ExpandImageView
                android:id="@+id/new_user_red_envelopes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <com.dhunter.common.view.ExpandImageView
                android:layout_toRightOf="@+id/new_user_red_envelopes"
                android:id="@+id/new_uer_free_postage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <com.dhunter.common.view.ExpandImageView
                android:layout_toRightOf="@+id/new_user_red_envelopes"
                android:layout_below="@+id/new_uer_free_postage"
                android:id="@+id/new_user_basic_necessities_of_life"
                android:layout_width="0dp"
                app:layout_widthPercent="50%"
                android:layout_height="wrap_content"
                app:viewAspectRatio="2.74"
                />
        </RelativeLayout>
    </FrameLayout>
    <com.dhunter.common.view.ExpandImageView
        android:id="@+id/new_user_packs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:viewAspectRatio="9.55"
        />
</LinearLayout>