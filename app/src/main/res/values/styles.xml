<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppUIBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/statusbar_grayness</item>
        <item name="colorPrimaryDark">@color/statusbar_grayness</item>
        <item name="colorAccent">@color/color_ff7000</item>
        <item name="colorControlHighlight">@color/color_b7b7b7</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="AppUIBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/login_bg</item>
    </style>

    <style name="AppBaseTheme.SlideExitAnimation" parent="AppUIBaseTheme">
        <item name="android:windowAnimationStyle">@style/SlideExitAnimation</item>
    </style>

    <style name="SlideExitAnimation" parent="android:style/Animation">
        <item name="android:activityCloseEnterAnimation">@animator/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_right_out</item>
    </style>


    <!--card点击效果-->
    <style name="CardItemClick">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@drawable/selector_lift_on_touch</item>
    </style>

    <style name="TitleFragmentTitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_xx</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 小标题前面的标记 -->
    <style name="flag_for_sub_title">
        <item name="android:layout_width">@dimen/dimen_4dp</item>
        <item name="android:layout_height">@dimen/dimen_14dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen_14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/color_ff7000</item>
    </style>

    <!-- 小标题 -->
    <style name="sub_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textColor">@color/color_43484b</item>
        <item name="android:layout_marginLeft">@dimen/dimen_24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 粗分割线 -->
    <style name="thick_separation_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_4dp</item>
        <item name="android:background">@color/color_d9d9d9</item>
        <item name="android:layout_marginTop">@dimen/dimen_4dp</item>
    </style>

    <!-- 粗分割线 -->
    <style name="thick_separation_line_no_margintop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_4dp</item>
        <item name="android:background">@color/color_d9d9d9</item>
    </style>


    <!-- 细分割线 -->
    <style name="thin_separation_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_14dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_14dp</item>
        <item name="android:background">@color/color_d9d9d9</item>
    </style>

</resources>
